# FNU Predictive Analytics System Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=fnu_analytics

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your-email@university.edu
EMAIL_PASSWORD=your-app-password
FROM_EMAIL=fnu-analytics@university.edu

# Logging Configuration
LOG_LEVEL=INFO

# Environment (development, production, testing)
ENVIRONMENT=development
